<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#86E3EF"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/categoriaTextViewPP"
        style="@style/word_categoria"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:background="#86E3EF"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/tituloTextViewPP"
        style="@style/word_title"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#86E3EF"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/cantidadTextViewPP"
        style="@style/word_precio"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#86E3EF"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/precioTextViewPP"
        style="@style/word_precio"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#86E3EF"
        android:layout_marginTop="100dp"/>

    <ImageButton
        android:id="@+id/botonEliminarPP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/papelera"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="#EA6565"/>

</RelativeLayout>

